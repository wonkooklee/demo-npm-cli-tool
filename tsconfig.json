{
  "compilerOptions": {
    "module": "ESNext",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "declaration": true,
    "outDir": "out",
    "rootDir": "src",
    "typeRoots": ["config"]
  },
  "include": ["src"],
  "exclude": ["node_modules", "out", "config"]
}
